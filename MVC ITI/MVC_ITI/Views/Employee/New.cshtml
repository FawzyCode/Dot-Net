@model Employee
@{
    ViewData["Title"] = "New";
    SelectList deptoption = new SelectList(ViewBag.DeptList , "Id" , "Name");
}

<h1>New</h1>
<form method="post" asp-action="SaveNew" asp-controller="Employee">
    <div>
        <label asp-for="Name"></label>
        <input class="form form-control" asp-for="Name"  />
    </div>

    <div>
        <label asp-for="Salary"></label>
        <input class="form form-control" asp-for="Salary" />
    </div>

    <div>
        <label asp-for="jobTittle"></label>
        <input class="form form-control" asp-for="jobTittle" />
    </div>

    <div>
        <label asp-for="ImageURL"></label>
        <input class="form form-control" asp-for="ImageURL" />
    </div>

    <div>
        <label asp-for="Adress"></label>
        <input class="form form-control" asp-for="Adress" />
    </div>

    <div>
        <label asp-for="DepartmentId"></label>
        <!--<input class="form form-control" asp-for="DepartmentId" />   -->
        <select class="form form-control"
                asp-items="deptoption"
                 asp-for="DepartmentId">
           <option value="0">--Select Department--</option>
       
        </select>

    </div>

    
    <input type="submit" value="Create" class="btn btn-success" />

</form>
