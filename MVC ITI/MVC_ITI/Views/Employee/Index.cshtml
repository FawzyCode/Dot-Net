@model List<Employee>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<a asp-action="New" asp-controller="Employee" class="btn btn-success">NEW</a>
<div id="div1" style="border:2px solid blue"></div>
<table class="table table-bordered table-hover">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Salary</th>
        <th>Update</th>
    </tr>

   @foreach(var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Salary</td>
            <td><a href="/Employee/Edit/@item.Id">Edit</a></td>
            <td><a href="/Employee/EmpCardPartial/@item.Id" onclick="GetEmpData(@item.Id)">Details</a></td>
        </tr>
    }

</table>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script>
    function GetEmpData(EmpId)
    {
      
        Event.PreventDefault();
          //Ajax Call End Point Using JQuery
        $.ajax({
            url: "/Employee/EmpCardPartial/" +  EmpId ,
            success: function (result) {
                console.log(result);
                 // $("#div1").html(result);
            }
        });
    }
</script>
