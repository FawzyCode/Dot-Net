@model IEnumerable<Category>

@{
	ViewBag.PageTitle = "Category Managment";
	ViewBag.CardTitle = "View Categories";
	Layout = "~/Views/Shared/_Dashboard.cshtml";
}


@* <a href="Admin/Category/Create" class="btn btn-primary mb-1">Create</a> *@
<a asp-area="Admin" asp-controller="Category" asp-action="Create" class="btn btn-primary mb-1">
	Create
</a>

<br />
<table class="table table-hover" width="100%">
	<thead class="text-bold">
		<tr>
			<td>Name</td>
			<td>Desription</td>
			<td>Date Created</td>
			<td class="text-center ">Actions</td>
		</tr>
	</thead>
	@foreach (var item in Model)
	{
		<tr>
			<td>@item.Name</td>
			<td>@Html.Raw(item.Description)</td>
			<td>@item.CreatedTime</td>
			<td class="d-flex justify-content-center align-items-center">
				<a asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-id=@item.Id class="btn btn-success mx-1">
					Edit
				</a>
				<a asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id=@item.Id class="btn btn-danger mx-1">
					Delete
				</a>
				@* <a href="/Category/Delete/@item.Id" class="btn btn-danger mx-1">Delete</a> *@
			</td>
		</tr>

	}
</table>