@model Category

@{
	ViewBag.PageTitle = "Category Managment";
	ViewBag.CardTitle = "Delete Category";
	Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<div class="row">
	<div class="col-md-4">
		<form asp-action="DeleteCategory" method="post">
			<div class="form-group">
				<input hidden asp-for="Id" />
				<label asp-for="Name"></label>
				<input asp-for="Name" disabled class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>

			</div>

			<div class="form-group">
				<label asp-for="Description"></label>
				<input asp-for="Description" disabled class="form-control" />
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>

			<div class="form-group mb-3">

				<input type="submit" value="Delete" class="btn btn-danger" />
				@* <a asp-action="Index" asp-controller="Category" class="btn btn-warning">Back To List</a> *@

			</div>


		</form>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}