@model Category

@{
	ViewBag.PageTitle = "Category Managment";
	ViewBag.CardTitle = "Edit Category";
	Layout = "~/Views/Shared/_Dashboard.cshtml";
}
<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div class="form-group">
				<input hidden asp-for="Id" />
				<label asp-for="Name"></label>
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>

			</div>

			<div class="form-group">
				<label asp-for="Description"></label>
				<textarea id="mytextarea" asp-for="Description" class="form-control"></textarea>
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>

			<div class="form-group">

				<button type="submit" class="btn btn-success">Save</button>
				<a asp-action="Index" asp-controller="Category" class="btn btn-warning">Back To List</a>

			</div>


		</form>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
	<script>
		tinymce.init({
		  selector: '#mytextarea'
		});
	</script>
}